<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <EditText android:id="@+id/tweetInput"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/tweet_input" />

            <Button android:id="@+id/tweetSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tweet_send"
                android:onClick="submitTweet" />

    </LinearLayout>
    <Button android:id="@+id/twitterLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="twitterAuth"/>
</LinearLayout>